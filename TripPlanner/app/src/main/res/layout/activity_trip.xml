<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_anchorGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="94dp"
            android:text="@string/trip"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tripName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="42dp"
            android:layout_marginRight="42dp"
            android:layout_marginBottom="-4dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_marginStart="-4dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp"
            android:layout_toStartOf="@+id/tripName"
            android:layout_toLeftOf="@+id/tripName"
            android:text="@string/start"
            android:textSize="18sp" />

        <fragment
            android:id="@+id/place_autocomplete_fragment"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="230dp"
            android:layout_height="37dp"
            android:layout_below="@+id/tripName"
            android:layout_alignEnd="@+id/tripName"
            android:layout_alignRight="@+id/tripName"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="-5dp"
            android:layout_marginRight="-5dp"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView">

        </fragment>

        <fragment
            android:id="@+id/place_autocomplete_fragment2"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="185dp"
            android:layout_height="36dp"
            android:layout_below="@+id/place_autocomplete_fragment"
            android:layout_alignEnd="@+id/place_autocomplete_fragment"
            android:layout_alignRight="@+id/place_autocomplete_fragment"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="-5dp"
            android:layout_marginRight="-5dp"></fragment>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_alignBottom="@+id/place_autocomplete_fragment2"
            android:layout_marginStart="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginEnd="-4dp"
            android:layout_marginRight="-4dp"
            android:layout_marginBottom="-1dp"
            android:text="@string/end"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignRight="@+id/textView2"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/date"
            android:textSize="18sp" />

        <Button
            android:id="@+id/calendar"
            android:layout_width="76dp"
            android:layout_height="68dp"
            android:layout_alignStart="@+id/place_autocomplete_fragment2"
            android:layout_alignLeft="@+id/place_autocomplete_fragment2"
            android:layout_alignEnd="@+id/place_autocomplete_fragment2"
            android:layout_alignRight="@+id/place_autocomplete_fragment2"
            android:layout_alignBottom="@+id/textView4"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="110dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginRight="-1dp"
            android:layout_marginBottom="-33dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignEnd="@+id/textView4"
            android:layout_alignRight="@+id/textView4"
            android:layout_marginStart="-3dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="77dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:text="@string/time"
            android:textSize="18sp" />

        <Button
            android:id="@+id/time"
            android:layout_width="81dp"
            android:layout_height="66dp"
            android:layout_alignStart="@+id/calendar"
            android:layout_alignLeft="@+id/calendar"
            android:layout_alignEnd="@+id/calendar"
            android:layout_alignRight="@+id/calendar"
            android:layout_alignBottom="@+id/textView5"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginEnd="-3dp"
            android:layout_marginRight="-3dp"
            android:layout_marginBottom="-21dp" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignEnd="@+id/time"
            android:layout_alignRight="@+id/time"
            android:layout_marginStart="-8dp"
            android:layout_marginLeft="-8dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/round"
            android:textSize="18sp" />

        <Button
            android:id="@+id/addTripBtn"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_below="@+id/switch1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="136dp"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="132dp"
            android:layout_marginRight="132dp"
            android:layout_marginBottom="97dp"
            android:text="@string/add"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/calDate"
            android:layout_width="188dp"
            android:layout_height="31dp"
            android:layout_alignBottom="@+id/textView4"
            android:layout_marginStart="62dp"
            android:layout_marginLeft="62dp"
            android:layout_marginEnd="-60dp"
            android:layout_marginRight="-60dp"
            android:layout_marginBottom="-15dp"
            android:layout_toStartOf="@+id/calendar"
            android:layout_toLeftOf="@+id/calendar"
            android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="81dp"
            android:layout_height="29dp"
            android:layout_alignBottom="@+id/textView5"
            android:layout_marginStart="77dp"
            android:layout_marginLeft="77dp"
            android:layout_marginEnd="61dp"
            android:layout_marginRight="61dp"
            android:layout_marginBottom="6dp"
            android:layout_toStartOf="@+id/time"
            android:layout_toLeftOf="@+id/time"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5" />

    </RelativeLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/cardview_light_background"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"

            app:title="Tripsy"
            app:titleEnabled="true"
            app:toolbarId="@+id/toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_anchor="@+id/appbar"
        app:layout_anchorGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout"
        app:title="Tripsy"
        app:titleTextColor="#FFFFFF"></androidx.appcompat.widget.Toolbar>


</androidx.constraintlayout.widget.ConstraintLayout>